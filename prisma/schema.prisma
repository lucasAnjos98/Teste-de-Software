generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id @default(cuid())
  email           String   @unique
  name            String
  password        String
  points          Int      @default(0)
  avatar          String?
  bio             String?
  averageRating   Float    @default(0)
  totalRatings    Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relacionamentos
  books           Book[]
  transactions    Transaction[]
  borrowings      Borrowing[]     @relation("Borrower")
  lendings        Borrowing[]     @relation("Lender")
  sentMessages    Message[]       @relation("Sender")
  receivedMessages Message[]       @relation("Receiver")
  givenRatings    Rating[]        @relation("Giver")
  receivedRatings Rating[]        @relation("Receiver")

  @@map("users")
}

model Book {
  id          String      @id @default(cuid())
  title       String
  author      String
  description String?
  coverImage  String?
  status      BookStatus  @default(AVAILABLE)
  ownerId     String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  // Relacionamentos
  owner       User         @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  transactions Transaction[]
  borrowings  Borrowing[]

  @@map("books")
}

model Transaction {
  id          String           @id @default(cuid())
  type        TransactionType
  points      Int
  userId      String
  bookId      String?
  description String
  createdAt   DateTime         @default(now())

  // Relacionamentos
  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  book        Book?            @relation(fields: [bookId], references: [id], onDelete: SetNull)

  @@map("transactions")
}

model Borrowing {
  id          String        @id @default(cuid())
  bookId      String
  borrowerId  String
  lenderId    String
  status      BorrowingStatus @default(ACTIVE)
  borrowedAt  DateTime      @default(now())
  returnedAt  DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  // Relacionamentos
  book        Book          @relation(fields: [bookId], references: [id], onDelete: Cascade)
  borrower    User          @relation("Borrower", fields: [borrowerId], references: [id], onDelete: Cascade)
  lender      User          @relation("Lender", fields: [lenderId], references: [id], onDelete: Cascade)
  messages    Message[]

  @@map("borrowings")
}

model Message {
  id          String      @id @default(cuid())
  content     String
  senderId    String
  receiverId  String
  borrowingId String
  isRead      Boolean     @default(false)
  createdAt   DateTime    @default(now())

  // Relacionamentos
  sender      User        @relation("Sender", fields: [senderId], references: [id], onDelete: Cascade)
  receiver    User        @relation("Receiver", fields: [receiverId], references: [id], onDelete: Cascade)
  borrowing   Borrowing   @relation(fields: [borrowingId], references: [id], onDelete: Cascade)

  @@map("messages")
}

model Rating {
  id        String    @id @default(cuid())
  score     Int       // 1-5 stars
  comment   String?
  giverId   String
  receiverId String
  createdAt DateTime  @default(now())

  // Relacionamentos
  giver     User      @relation("Giver", fields: [giverId], references: [id], onDelete: Cascade)
  receiver  User      @relation("Receiver", fields: [receiverId], references: [id], onDelete: Cascade)

  @@map("ratings")
}

enum BookStatus {
  AVAILABLE
  BORROWED
  UNAVAILABLE
}

enum TransactionType {
  DONATION
  BORROWING
}

enum BorrowingStatus {
  ACTIVE
  RETURNED
  OVERDUE
}